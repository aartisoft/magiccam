<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout android:id="@+id/swipe_refresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"

    tools:background="@android:color/white"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:focusable="true"
        android:background="#33000000">
        <!--android:background="#33000000"-->
        <ImageView
            android:id="@+id/image"
            android:layout_width="75dp"
            android:layout_height="75dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/title"
            app:layout_constraintVertical_chainStyle="packed"
            android:src="@drawable/ic_launcher"
            android:elevation="1dp"
            />
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/image"
            android:background="?color_translucent_background"/>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/detail"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="?color_translucent_background"/>
        <nahuy.fithcmus.magiccam.presentation.uis.customs.views.SeeThroughTranslucentTextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:layout_constraintTop_toBottomOf="@id/image"
            app:layout_constraintBottom_toTopOf="@id/detail"
            app:layout_constraintVertical_chainStyle="packed"
            android:background="?color_translucent_background"
            android:text="@string/access_external_storage"
            android:gravity="center"
            android:textSize="18sp"
            android:textStyle="bold"/>
        <nahuy.fithcmus.magiccam.presentation.uis.customs.views.SeeThroughTranslucentTextView
            android:id="@+id/detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/title"
            app:layout_constraintBottom_toTopOf="@id/allow_button"
            app:layout_constraintVertical_chainStyle="packed"
            android:background="?color_translucent_background"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:text="@string/grant_permission_order_description"/>
        <TextView
            android:id="@+id/foreground_title"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:layout_constraintTop_toTopOf="@id/title"
            android:text="@string/access_external_storage"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="?color_foreground_request_permission"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/foreground_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="14sp"
            app:layout_constraintTop_toTopOf="@id/detail"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:textColor="?color_foreground_request_permission"
            android:text="@string/grant_permission_order_description"
            />
        <TextView
            android:id="@+id/allow_button"
            android:layout_width="250dp"
            android:layout_height="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@string/allow_access"
            app:layout_constraintTop_toBottomOf="@id/detail"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="#DF007AFF"
            android:background="?background_allow_button"
            android:layout_marginTop="60dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:gravity="center"
            android:textSize="16sp"
            android:textStyle="bold"
            android:elevation="1dp"
            android:clickable="true"
            android:focusable="true"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>