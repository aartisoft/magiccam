<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <nahuy.fithcmus.magiccam.presentation.uis.customs.views.FitScreenPhotoView
        android:id="@id/edit_main_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:background="@drawable/image_rect"
        xmlns:android="http://schemas.android.com/apk/res/android"/>

    <ImageView
        android:id="@id/edit_back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="fitXY"
        android:layout_gravity="top|left"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/ic_edit_back_trap"/>

    <ImageView
        android:id="@id/edit_save"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="fitXY"
        android:layout_gravity="top|right"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/ic_edit_save_trap"/>

</FrameLayout>